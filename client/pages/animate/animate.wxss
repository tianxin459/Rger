/* pages/animate/animate.wxss */

.arrow {
  position: absolute;
  top: -25px;
  right: 25px;
  transform: translate(-50vw,50vh);
  /* transform: rotate(45deg); */
  /* opacity: 0; */
  margin: 25px 0 0 -25px;
  z-index: 99;
}

.arrow image{
  width: 50px;
  height: 50px;
}

.moving{
  transform: translate(0,0)  ;
  opacity: 1;
  transition: transform 1s ease-in;
}
.moving image{
  transform:  rotate(25deg);
  transition: transform 1s ease-in;
}
