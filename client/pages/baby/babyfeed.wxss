.babyinfo {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-radius: 5px;
  padding: 5px;
  width: 100%
}

.babyinfo icon
{
  margin: 20rpx;
}


.babyinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}


.babyinfo-nickname {
  /*color: #aaa;*/
  font-family: "Georgia", Tahoma, Sans-Serif;
  text-transform: capitalize;
  /*font-size: 12px;*/
  line-height: 18px;
}

.overlapButtonGroup{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 188rpx;
  position: relative;
  /*top:-188rpx;*/
}

.overlapButtonGroup-a{
  width: 100%;
}

.overlapButtonGroup .button{
  width: 34%;
  display: flex;
  flex-direction: column;
  border: 1px solid gold;
  padding: 5px;
  justify-content: center;
  border-radius: 0;
}

.overlapButtonGroup-a .button{
  width: 34%;
}