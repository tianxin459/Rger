.item-assigned {
  /*background-color: lightskyblue;*/
  border: 1px solid lawngreen;
  /*float:left;*//*align-content: center;*//*text-align: center;*//*height: 30px;*//*width: 80px;*/
  border-radius: 5px;
  vertical-align: middle;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-content: center;
  padding: 5px;
  width: 90%;
  transform: skew(-20deg);
  transition: width 1s;
}
.item-assigned:nth-child(even){
  margin-bottom: 10px;
}

.item-hover {
  background-color: red;
  border: 2px solid greenyellow;
  color: white;
}

.listContainer-assigned {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: center;
  align-items: center;
}

.listContainer-assigned .avatar-assigned {
  height: 20px;
  width: 20px;
  border-radius: 50%;
}

.listContainer-assigned img-assigned {
  margin-left: auto;
  margin-right: auto;
}

.listContainer-assigned text {
  margin-top: 5px;
  /*font-family: "Georgia", Tahoma, Sans-Serif;*/
  text-transform: capitalize;
}


