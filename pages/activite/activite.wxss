/* share */

.arrow {
  position: absolute;
  top: -25px;
  right: 0px;
  transform: translate(-30vw, 20vh);
  /* transform: rotate(25deg);  */
  opacity: 0;
  margin: 25px 0 0 -25px;
  z-index: 99;
}

.arrow image {
  width: 60px;
  height: 60px;
  /* transform: rotate(20deg) translate(20px, -10px); */
}

.moving {
  transform: translate(20px, -10px);
  opacity: 1;
  transition: transform 1s ease-in;
  z-index: 100;
}

.moving image {
  transform: rotate(20deg);
  transition: transform 1s ease-in;
  z-index: 100;
}

