.line {
  margin: 5px;
  /* border: 1px solid red; */
  border-radius: 5px;
  /* border-bottom-right-radius: 15px; */
  border: 0.5px solid gainsboro;
  background-color: white;
  padding: 5px;
}

.line:nth-child(even) {
  background-color: #ffc;
}

