/* pages/activiteTeam/activiteTeam.wxss */

page {
  --team-bg: linear-gradient(top, white, #eee);
}

.container-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  max-height: 150px;
  overflow: scroll;
  scroll-behavior: smooth;
  position: absolute;
  z-index: 99;
  /* top: 50px; */
  left: 0px;
  /* background-color: orange; */
  padding: 5px;
  width: 95%;
  background-color: white;
  transition: all 0.2s ease-in;
}

.container-item .item {
  width: 25%;
  /* border: 1px solid gold; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 0.9em;
}

.container-team {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.container-team .avatar {
  width: 20px;
  height: 20px;
  border-radius: 10px;
  margin: 0 5px;
}

.team {
  display: flex;
  justify-content: space-around;
  border: 1px solid gray;
  border-radius: 5px;
  width: 100%;
  transform: skewX(160deg);
  padding: 2px 5px;
  margin: 3px 0px;
  box-shadow: 2px 2px 1px;
  background: linear-gradient(white, #eee);
}

.team-title {
  background-color: yellow;
  border: 1px solid goldenrod;
  border-radius: 5px;
  position: relative;
  top: -5px;
}

.team-member {
  display: flex;
  justify-content: flex-start;
  border-radius: 5px;
  flex: 1;
}

.openParticipator{
  transform: none;
  /* will-change: true; */
  /* background-color: red; */
   opacity: 1; 
}

.closeParticipator{
  transform: translateY(230%) translateZ(-99px);
  /* transition: transform 0.2ms ease-in; */
  /* will-change: true; */
  /* background-color: blue; */
   opacity: 0; 
}
