  border-bottom: 1px solid gray;
}

button {
  margin-bottom: 5px;
}

.weui-search-bar {
  background-color: white;
}

.weui-search-bar {
  border: 0px;
}

/* share */

.arrow {
  position: absolute;
  top: -25px;
  right: 0px;
  transform: translate(-30vw, 20vh);
  /* transform: rotate(25deg);  */
  opacity: 0;
  margin: 25px 0 0 -25px;
  z-index: 99;
}

.arrow image {
  width: 60px;
  height: 60px;
  /* transform: rotate(20deg) translate(20px, -10px); */
}

.moving {
  transform: translate(20px, -10px);
  opacity: 1;
  transition: transform 1s ease-in;
  z-index: 100;
}

.moving image {
  transform: rotate(20deg);
  transition: transform 1s ease-in;
  z-index: 100;
}

.error {
  /* border: 2px solid red; *//* background-color: #e25819; */
}

textarea {
  /* border: 1px solid azure; */
  box-shadow: 1px 1px 0;
  padding-top:1em;
}

input[type="text"] {
  border: 1px solid gainsboro;
  padding: 0.5em 0em 0px 10px;
}

.title {
  margin-left: 5px;
  align-self: flex-start;
  text-align: left;
  /* border:1px solid gray; */
}

.title-a {
  transform: translateY(0em) scale(0.5, 0.5);
  transition: all 0.1s ease-in;
  color: black;
}

.title-s {
  /* transform: none; */
  color:  #999999;
  transform: translateY(1em);
  transition: all 0.1s ease-in;
}

.noline {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}

.weui-cell::before {
  border: 0px;
}

